@media (max-width: 980px) {
  #top-banner {
    #banner-image {
      width: 120%;
    }
    #info-container {
      top: 7vw;
      left: 11.5%;
      h2 {
        font-size: 1.8vw;
      }
      #countdown-title {
        font-size: 1.2vw;
      }
      #countdown {
        font-size: 1.5vw;
      }
    }
  }
}

@media (max-width: 770px) {
  #top-banner {
    #banner-image {
