html, body {
  margin: 0;
  padding: 0;
  font-family: "Gotham A", "Helvetica", "Arial";
}

.center-container {
  margin: 0 auto;
  margin-top: 30px;
  text-align: center;
  text-transform: uppercase;

  h1 {
    font-size: 26px;
    font-weight: 400;
    text-transform: uppercase;
    margin-bottom: 0px;
  }
  p {
    margin-top: 8px;
    font-size: 15px;
  }
  table {
    margin: 0 auto;
  }
}

#message {
  text-align: center;
  margin: 0 auto;
  margin-top: 10px;
  color: #A5878C;
}
