#language-selector {
  .dropbtn {
    font-weight:bold;
  }
}
#email-input {
  font-family: "Gotham A", "Gotham B", "Helvetica", "Arial";
  padding: 8px;
  width: 340px;
  font-size: 14px;

  &input[placeholder] {
    text-transform: uppercase;
    font-style: italic;
  }
  &::-webkit-input-placeholder {
   text-transform: uppercase;
   font-style: italic;
  }
  &:-moz-placeholder { /* Firefox 18- */
    text-transform: uppercase;
    font-style: italic;
  }
  &::-moz-placeholder {  /* Firefox 19+ */
    text-transform: uppercase;
    font-style: italic;
  }
  &:-ms-input-placeholder {
    text-transform: uppercase;
    font-style: italic;
  }
}

#email-submit-btn {
  margin-top: 18px;
  color: white;
  font-family: "Gotham A", "Gotham B", "Helvetica", "Arial";
  font-weight: bold;
  text-transform: uppercase;
  border-radius: 0px;
  border: 1px solid #ABABAB;
  background-color: #2A2A2A;
  font-size: 14px;
  padding: 8px 18px;
}

.about-header {
  margin-top: 80px;
}

@media (max-width: 420px) {
  #email-input {
    width: 90%;
  }
}

@media (max-width: 380px) {
  #email-input {
    width: 90%;
  }
}

@media (max-width: 330px) {
  #email-input {
    width: 90%;
  }
}
