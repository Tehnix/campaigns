#info-container-mobile {
  display: none;
}

#top-banner {
  width: 100%;

  #logo-image {
    margin-top: 4px;
    height: 30px;
    margin-left: 25%;
  }
  #banner-image {
    width: 100%;
    background-image: url("#{dashboardBannerImage}");
    /*background-size: contain;*/
    /*padding-top: 17.8%;*/
    background-repeat: no-repeat;
    background-position: center;
    background-size: 2249px 439px;
    padding-top: 400px;
  }
  #info-container {
    position: absolute;
    top: 40px;
    width: 500px;
    left: 53%;
    text-align: center;
    h1 {
      font-family: "Gotham A", "Gotham B", "Helvetica", "Arial";
      font-size: 33px;
      text-transform: uppercase;
      margin-bottom: 5px;
    }
    p {
      font-size: 0.8vw;
      color: #505050;
    }
    #link-container {
      font-size: 15px;
      background: white;
      margin: 0 auto;
      width: 90%;
      padding: 0.4px;
      word-wrap: break-word;
      &.shortened {
        padding: 8px;
      }
    }
  }
  #prizes-container {
    display: none;
    position: absolute;
    top: 250px;
    left: 15.2%;
    text-align: center;
    width: 200px;

    h2 {
      font-family: "Gotham A", "Gotham B", "Helvetica", "Arial";
      font-size: 22px;
      text-transform: uppercase;
      margin-bottom: 5px;
    }
    p {
      font-family: "Gotham A", "Gotham B", "Helvetica", "Arial";
      font-size: 11px;
      text-transform: uppercase;
      margin-top:0px;
      margin-bottom:1px;
      margin-left: 20px;
      margin-left: 20px;
    }
  }
}
.share-this-link {
  margin-bottom: 8px;
}
.share-on-facebook {
  img {
    margin-bottom: -5px;
  }
  a {
    text-decoration: none;
  }
}

#progress-container {
  margin-top: 40px;
  width: 55%;

  td {
    width: 20%;
  }
  .align-left {
    text-align: left;
  }

  #progress-bar-background {
    margin-top: 10px;
    margin-bottom: 10px;
    background-color: #E3E2DD;
    height: 3px;
    width: 100%;
  }

  #progress-bar {
    background-color: #98727A;
    height: 3px;
    width: #{show progressBarPercentage}%;
  }

  #progress-goals, #progress-steps {
    font-size: 12px;
  }

  .round-number {
    color: #686868;
    border-radius: 50%;
    border: 1px solid #EAE9E6;
    background: #F1F0EE;
    width: 25px;
    height: 25px;
    line-height: 25px;
    margin: 0 auto;
    position: relative;
    cursor: pointer;

    &.round-number-red {
      border: 1px solid #EAE9E6;
      background: #98727A;
      color: white;
    }
    .step-image {
      display: none;
      background: white;
      position: absolute;
      top: 0;
      left: 0;
      padding-bottom: 20px;
      padding-left: 10px;
      padding-top: 10px;
      padding-right: 10px;
      box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    }
    &:hover > .step-image {
      display: block;
      background: white;
      position: absolute;
      top: -195px;
      left: -75px;
    }
  }
}

#progress-steps {
  td {
    vertical-align: top;
  }
}

#signup-counter {
  font-size: 13px;
  margin-top: 60px;

  #signup-count {
    color: #98727A;
  }
  #keep-updated {
    color: #CCCCCC;
    text-transform: none;
    font-size: 13px;
    font-style: italic;
  }
}

@media (max-width: 1700px) {
  #progress-container {
    width: 65%;
  }
  #top-banner {
    #banner-image {
      background-size: 1700px 331px;
      padding-top: 302px;
    }
    #logo-image {
      height: 30px;
      margin-left: 18%;
    }
    #info-container {
      top: 50px;
      width: 380px;
      h1 {
        font-size: 20px;
      }
      p, #link-container {
        font-size: 13px;
      }
    }
  }
}

@media (max-width: 980px) {
  #progress-container {
    width: 85%;
  }
  #top-banner {
    #banner-image {
      background-size: 1200px 234px;
      padding-top: 213px;
    }
    #logo-image {
      height: 25px;
      margin-left: 16%;
    }
    #info-container {
      top: 35px;
      width: 280px;
      h1 {
        font-size: 14px;
      }
      p, #link-container {
        font-size: 9px;
      }
    }
  }
  .share-on-facebook {
    img {
      margin-bottom: -4px;
      width: 15px;
      height: 15px;
    }
  }
}

@media (max-width: 650px) {
  #progress-container {
    width: 95%;
  }
  #top-banner {
    #banner-image {
      background-size: 850px 165px;
      padding-top: 151px;
    }
    #logo-image {
      height: 25px;
      margin-left: 13%;
    }
    #info-container {
      top: 32px;
      width: 200px;
      h1 {
        font-size: 11px;
      }
      p, #link-container {
        font-size: 7px;
        margin-top: 0px;
        margin-bottom: 4px;
      }
    }
  }
  .share-on-facebook {
    img {
      margin-bottom: -3px;
      width: 12px;
      height: 12px;
    }
  }
}

@media (max-width: 500px) {
  .hide-on-mobile {
    display: none;
  }
  #progress-container {
    #progress-bar {
      background-color: #98727A;
      height: 3px;
      width: #{show progressBarMobilePercentage}%;
    }
    #progress-steps {
      font-size: 9px;
    }
  }
  #top-banner {
    #banner-image {
      background-size: 950px 185px;
      padding-top: 168px;
      background-position: -120px;
    }
    #logo-image {
      height: 25px;
      margin-left: 10%;
    }
  }
  #info-container-mobile {
    display: block;
    h1 {
      font-size: 15px;
    }
    p, #link-container-mobile {
      font-size: 12px;
    }
    #link-container-mobile {
      background: white;
      margin: 0 auto;
      width: 90%;
      padding: 0.4px;
      word-wrap: break-word;
      text-transform: none;
    }
    .share-on-facebook {
      img {
        margin-bottom: -1px;
        width: 12px;
        height: 12px;
      }
    }
  }
}

@media (max-width: 400px) {
  #top-banner {
    #banner-image {
      background-position: -170px;
    }
    #logo-image {
      height: 25px;
      margin-left: 10%;
    }
  }
  #progress-container {
    #progress-steps {
      font-size: 8px;
    }
  }
}
